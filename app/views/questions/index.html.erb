<h2 class="mb-4">Questions</h2>

<% @questions.each do |question| %>
  <article class="card">
    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= question.body %>
        </p>
      </section>

      <%= link_to "Show", question_path(question), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_question_path(question), class: "btn btn-secondary" %>
      <%= button_to "Destroy", question_path(question), class: "btn btn-danger",
        method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>
    </div>
  </article>
<% end %>
