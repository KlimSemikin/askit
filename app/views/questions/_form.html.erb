<%= render "shared/errors", object: question %>

<%= form_with model: question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: true, required: true, minlength: 2, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: true, required: true, minlength: 2, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :tag_ids %>
    </div>

    <div class="col-sm-10">
      <%= f.collection_select :tag_ids, tags, :id, :title, {},
        { data: { placeholder: t('activerecord.attributes.question.tag_ids') },
          multiple: true,
          class: 'js-multiple-select w-100' } %>
    </div>
  </div>

  <%= f.submit t('global.button.submit'), class: 'btn btn-primary'%>
<% end %>
