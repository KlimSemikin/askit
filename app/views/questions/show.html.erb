<h2 class="mb-4"><%= @question.title %></h2>


<time datetime="<% @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to "Edit", edit_question_path(@question), class: "btn btn-secondary" %>
<%= button_to "Destroy", question_path(@question), class: "btn btn-danger",
  method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>
