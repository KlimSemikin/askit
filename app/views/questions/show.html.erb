<% provide :page_title, "Question" %>
<% currently_at "Question" %>

<h2 class="mb-4"><%= @question.title %></h2>

<time datetime="<% @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<%= link_to "Edit", edit_question_path(@question), class: "btn btn-secondary" %>
<%= button_to "Destroy", question_path(@question), class: "btn btn-danger",
  method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>

<hr class="my-4">

<h4>Write your answer</h4>

<%= render "shared/errors", object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: "Body", class: 'form-control'%>
    </div>
  </div>

  <%= f.submit "Submit answer!", class: 'btn btn-primary'%>
<% end %>

<h3 class="mt-5">Answers</h3>

<%= render partial: 'answers/answer', collection: @answers,
  as: :answer, locals: {question: @question} %>
